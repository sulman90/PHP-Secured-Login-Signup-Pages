<?php

$name = $password = $msg =  "";





if ($_SERVER["REQUEST_METHOD"] == "POST") {
  $username = test_input($_POST["name"]);
  $password = test_input($_POST["password"]);
  
  
  $passhash = hash('sha256', $password);
 $hashpassword = password_hash ( $password ,PASSWORD_DEFAULT);

 
 
 
$encrypt_method = "AES-256-CBC";
$length = 256;
$key = openssl_random_pseudo_bytes($length);
$iv = openssl_random_pseudo_bytes(openssl_cipher_iv_length($encrypt_method));
$outputu = openssl_encrypt($username, $encrypt_method, $key, 0, $iv);
 
$outputud = openssl_decrypt($outputu, $encrypt_method, $key, 0, $iv);


}

function test_input($data) {
  $data = htmlspecialchars($data);
  return $data;
}


?>

<h2>Welcome to security page</h2>
<form method="post" action="<?php echo htmlspecialchars($_SERVER["PHP_SELF"]);?>"> 
 
  Name: <input type="text" name="name">
  <br><br>
  password: <input type="password" name="password">
  <br><br>
  <input type="submit" name="submit" value="Submit">  
</form>

<?php
echo "<h2>Your information:</h2>";
echo "YOUR USERNAME IS :  ";
echo $username;
echo "<br>";
echo "<br>";
echo "YOUR PASSWORD IS :  ";
echo $password;
echo "<br>";
echo "<br>";
echo "YOUR HASHED PASSWORD IS :  ";
echo $passhash;
echo "<br>";
echo "<br>";
echo "YOUR HASHED PASSWORD WITH SALT IS :  ";
echo $hashpassword;
echo "<br>";
echo "<br>";
echo "YOUR ENCRYPTED USERNAME IS :  ";
echo $outputu;
echo "<br>";
echo "<br>";
echo "YOUR DECRYPTED USERNAME IS :  ";
echo $outputud;
echo "<br>";
echo "<br>";




?>

